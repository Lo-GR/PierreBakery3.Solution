@{
  Layout = "_Layout";
}
@using Bakery.Models;
@model Treat

<h2>Edit</h2>

<h4>Edit @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.LabelFor(model => model.TreatName)
    @Html.EditorFor(model => model.TreatName)

    <input type="submit" value="Save Treat" class="btn btn-info btn-sm" />
}
<p>@Html.ActionLink("Go back to Details", "Details", new { id = Model.TreatId })</p>